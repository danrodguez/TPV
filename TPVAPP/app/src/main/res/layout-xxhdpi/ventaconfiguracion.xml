<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/linearventa"
    android:orientation="vertical">

    <LinearLayout
        android:clickable="false"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:clickable="false"
                android:padding="2dp"
                android:textSize="@dimen/text_size"
                android:id="@+id/nombres"
                android:maxWidth="250dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textAlignment="textStart"
                android:text="@string/Cafes" />

            <TextView
                android:clickable="false"
                android:padding="2dp"
                android:gravity="center"
                android:textAlignment="center"
                android:id="@+id/precio"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size"
                android:text="@string/Cafes" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:clickable="false"
                android:textColor="#0061F1"
                android:id="@+id/numero"
                android:layout_width="@dimen/tamanoboton"
                android:layout_height="@dimen/tamanoboton"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="@dimen/text_sizepequeno"
                android:visibility="gone" />

            <TextView
                android:clickable="false"
                android:id="@+id/iva"
                android:layout_width="@dimen/tamanoboton"
                android:layout_height="@dimen/tamanoboton"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="@dimen/text_sizepequeno"
                android:visibility="gone" />

            <Button
                android:id="@+id/menos"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/menos"
                android:gravity="center"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary" />
    </LinearLayout>

</LinearLayout>


