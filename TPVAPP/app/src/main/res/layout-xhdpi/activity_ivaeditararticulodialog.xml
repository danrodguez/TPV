<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bordenegro"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_margin="20dp"
            android:gravity="center"
            android:id="@+id/botoneslinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="10">

            <Button
                android:padding="10dp"
                android:id="@+id/iva21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/redondeadoazul"
                android:text="@string/_21"
                android:textAllCaps="false"
                android:textColor="@color/primary_text"
                android:textSize="30sp" />

            <Button
                android:padding="10dp"
                android:id="@+id/iva10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margintop"
                android:layout_marginBottom="@dimen/margintop"
                android:background="@drawable/redondeadoazul"
                android:text="@string/_10"
                android:textAllCaps="false"
                android:textColor="@color/primary_text"
                android:textSize="30sp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#0061F1"
        android:id="@+id/cancelarboton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="@dimen/margintop"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:background="@drawable/bordeazul"
        android:text="@string/cancelar"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="30sp"/>

</LinearLayout>