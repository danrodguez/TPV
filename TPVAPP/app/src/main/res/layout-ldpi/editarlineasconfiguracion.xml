<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/linearventa"
    android:orientation="vertical">

    <LinearLayout
        android:textAlignment="center"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="5dp"
        android:clickable="false"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:clickable="false"
            android:textColor="#0061F1"
            android:id="@+id/numero"
            android:layout_width="@dimen/tamanoboton"
            android:layout_height="@dimen/tamanoboton"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="28sp"
            android:visibility="visible" />
        <TextView

            android:clickable="false"
            android:padding="2dp"
            android:textSize="18sp"
            android:id="@+id/nombres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:text="@string/Cafes" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin"
            android:gravity="end"
            android:orientation="horizontal">


            <ImageButton
                android:background="@drawable/masboton"
                android:id="@+id/mas"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="visible"
                tools:ignore="ButtonStyle"
                android:contentDescription="@string/mas" />

            <ImageButton
                android:layout_marginStart="5dp"
                android:id="@+id/menos"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/menos"
                android:gravity="center"
                android:visibility="visible"
                tools:ignore="ButtonStyle"
                android:contentDescription="@string/menos" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary" />
    </LinearLayout>

</LinearLayout>


